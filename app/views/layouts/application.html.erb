<!DOCTYPE html>
<html>
<head>
  <title>Rivian Arms</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<%# Navbar %>
<body style="padding-top: 50px;">
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
          <%= link_to 'Rivian Arms', root_path, class: 'navbar-brand' %>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="navbar-collapse collapse" id="navbar-main" >
          <ul class="nav navbar-nav">
            <li><%= link_to 'Services', controller: 'static_pages', action: 'services' %></li>
            <li><%= link_to 'Contact', controller: 'static_pages', action: 'contact' %></li>
            <li><a href="http://www.gunbroker.com">Gunbroker</a></li>
          </ul>
        </div>
    </div>
  </div>

  <%# Content %>
  <div class="container">
    <%= yield %>

  <%# Footer %>
    <footer>
      <div class="row">
        <p>&copy 2016 Rivian Arms LLC, all rights reserved.</p>
      </div>
    </footer>
  </div>
</body>
</html>
